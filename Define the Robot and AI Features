void setup() {
  Serial.begin(9600); // Bluetooth communication
  pinMode(motorPin1, OUTPUT);
  pinMode(motorPin2, OUTPUT);
}
void loop() {
  if (Serial.available()) {
    char command = Serial.read();
    if (command == '1') { // Move forward
      digitalWrite(motorPin1, HIGH);
      digitalWrite(motorPin2, LOW);
    } else if (command == '0') { // Stop
      digitalWrite(motorPin1, LOW);
      digitalWrite(motorPin2, LOW);
    }
  }
}

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button android:id="@+id/forwardBtn" android:text="Forward" />
    <Button android:id="@+id/stopBtn" android:text="Stop" />
    <EditText android:id="@+id/aiInput" android:hint="Ask AI something" />
    <Button android:id="@+id/aiSubmit" android:text="Submit" />
    <TextView android:id="@+id/aiOutput" android:text="AI Response" />
</LinearLayout


